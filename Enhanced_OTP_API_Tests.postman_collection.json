{
  "info": {
    "name": "PawSewa Enhanced OTP API Tests",
    "description": "Complete testing suite for enhanced OTP system with personalized email templates",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "your-api-key-here",
      "type": "string"
    },
    {
      "key": "test_email",
      "value": "test@example.com",
      "type": "string"
    },
    {
      "key": "test_user_name",
      "value": "John Doe",
      "type": "string"
    },
    {
      "key": "received_otp",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Check if the OTP service is running"
      }
    },
    {
      "name": "Test SMTP Connection",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/otp/test-connection",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "test-connection"]
        },
        "description": "Test SMTP server connection"
      }
    },
    {
      "name": "Send Personalized Verification OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Personalized verification OTP sent successfully', function () {",
              "    pm.response.to.have.status(200);",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.true;",
              "    pm.expect(response.data.email).to.eql(pm.collectionVariables.get('test_email'));",
              "    pm.expect(response.data.purpose).to.eql('verification');",
              "    console.log('✅ Personalized verification email sent to: ' + response.data.email);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"purpose\": \"verification\",\n  \"userName\": \"{{test_user_name}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/send",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "send"]
        },
        "description": "Send personalized verification OTP with user name"
      }
    },
    {
      "name": "Send Personalized Password Reset OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Personalized password reset OTP sent successfully', function () {",
              "    pm.response.to.have.status(200);",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.true;",
              "    pm.expect(response.data.email).to.eql(pm.collectionVariables.get('test_email'));",
              "    pm.expect(response.data.purpose).to.eql('password_reset');",
              "    console.log('✅ Personalized password reset email sent to: ' + response.data.email);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"purpose\": \"password_reset\",\n  \"userName\": \"{{test_user_name}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/send",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "send"]
        },
        "description": "Send personalized password reset OTP with user name"
      }
    },
    {
      "name": "Send Password Reset Link (Firebase Style)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Password reset link sent successfully', function () {",
              "    pm.response.to.have.status(200);",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.true;",
              "    pm.expect(response.data.email).to.eql(pm.collectionVariables.get('test_email'));",
              "    pm.expect(response.data.purpose).to.eql('password_reset_link');",
              "    console.log('✅ Firebase-style password reset link sent to: ' + response.data.email);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"purpose\": \"password_reset_link\",\n  \"userName\": \"{{test_user_name}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/send",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "send"]
        },
        "description": "Send Firebase-style password reset link with personalization"
      }
    },
    {
      "name": "Verify OTP - Valid Code",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Note: This test requires manual input of the OTP received via email",
              "if (pm.collectionVariables.get('received_otp') !== '') {",
              "    pm.test('OTP verification successful', function () {",
              "        pm.response.to.have.status(200);",
              "        const response = pm.response.json();",
              "        pm.expect(response.success).to.be.true;",
              "        pm.expect(response.data.verified).to.be.true;",
              "        console.log('✅ OTP verified successfully for: ' + response.data.email);",
              "    });",
              "} else {",
              "    pm.test('Manual OTP input required', function () {",
              "        pm.expect(true).to.be.true;",
              "        console.log('⚠️ Please set the received_otp variable with the OTP from your email');",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"otp\": \"{{received_otp}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/verify",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "verify"]
        },
        "description": "Verify OTP with correct code (requires manual input of received OTP)"
      }
    },
    {
      "name": "Verify OTP - Invalid Code",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Invalid OTP rejected', function () {",
              "    pm.response.to.have.status(400);",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.false;",
              "    pm.expect(response.data.verified).to.be.false;",
              "    console.log('✅ Invalid OTP correctly rejected');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"otp\": \"000000\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/verify",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "verify"]
        },
        "description": "Test verification with invalid OTP"
      }
    },
    {
      "name": "Test Without User Name (Fallback)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('OTP sent without user name (fallback to \"User\")', function () {",
              "    pm.response.to.have.status(200);",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.true;",
              "    console.log('✅ Email sent with fallback greeting');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"purpose\": \"verification\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/send",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "send"]
        },
        "description": "Test email sending without user name (should fallback to 'User')"
      }
    },
    {
      "name": "Rate Limit Test",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// This test should be run multiple times to trigger rate limiting",
              "if (pm.response.code === 429) {",
              "    pm.test('Rate limiting working', function () {",
              "        pm.response.to.have.status(429);",
              "        const response = pm.response.json();",
              "        pm.expect(response.error).to.include('Too many');",
              "        console.log('✅ Rate limiting is working correctly');",
              "    });",
              "} else {",
              "    pm.test('Request within rate limit', function () {",
              "        pm.response.to.have.status(200);",
              "        console.log('✅ Request within rate limit');",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"ratelimit@test.com\",\n  \"purpose\": \"verification\",\n  \"userName\": \"Rate Test User\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/send",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "send"]
        },
        "description": "Test rate limiting (run multiple times to trigger limit)"
      }
    },
    {
      "name": "Email Template Validation Test",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Email with special characters in name handled correctly', function () {",
              "    pm.response.to.have.status(200);",
              "    const response = pm.response.json();",
              "    pm.expect(response.success).to.be.true;",
              "    console.log('✅ Special characters in user name handled correctly');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"purpose\": \"verification\",\n  \"userName\": \"José María O'Connor <test@example.com>\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/otp/send",
          "host": ["{{base_url}}"],
          "path": ["api", "otp", "send"]
        },
        "description": "Test email template with special characters and potential XSS in user name"
      }
    }
  ]
}