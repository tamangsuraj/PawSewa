# Email Configuration
SMTP_HOST=smtp.yourbusinessmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-business-email@domain.com
SMTP_PASS=your-email-password-or-api-key

# Business Email Settings
FROM_EMAIL=noreply@pawsewa.com
FROM_NAME=PawSewa Team

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-for-flutter-app

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10

# Rate Limiting
MAX_OTP_REQUESTS_PER_HOUR=5
MAX_VERIFY_ATTEMPTS=3